<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical"
    android:background="@drawable/ripple_effect"
    android:id="@+id/layout_userprofile"
    tools:visibility="visible">

    <TextView
        android:id="@+id/inviteList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="초대 목록"
        android:textColor="@color/purple_200"
        android:textSize="20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ssomeul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/detail_iv_profile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_agora_person_basic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쏘오믈리에"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="와인, 안드로이드"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_study_invite2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:background="@drawable/button_background"
                android:text="초    대"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_study_noinvite"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:background="#514F4F"
                android:text="초    대"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:visibility="invisible" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/java"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/invite_iv_profile1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_agora_person_basic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invite_detail_nickname1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자바를자방"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/invite_detail_role1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="자바, 안드로이드"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_study_invite3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:background="@drawable/button_background"
            android:text="초    대"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/invite_iv_profile2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_agora_person_basic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invite_detail_nickname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="안드정복자"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/invite_detail_role2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Spring, 안드로이드"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_study_invite4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:background="@drawable/button_background"
            android:text="초    대"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_study_back"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/button_background"
        android:text="나 가 기"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:visibility="visible" />

</LinearLayout>